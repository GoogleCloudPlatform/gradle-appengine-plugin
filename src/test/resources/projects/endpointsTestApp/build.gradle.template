buildscript {

  repositories {
    mavenLocal()
    mavenCentral()
  }

  dependencies {
    classpath "com.google.appengine:gradle-appengine-plugin:@@version@@-SNAPSHOT"
  }
}

repositories {
  mavenCentral()
}

apply plugin: 'java'
apply plugin: 'war'
apply plugin: 'appengine'

dependencies {
  appengineSdk "com.google.appengine:appengine-java-sdk:@@version@@"
  compile "com.google.appengine:appengine-endpoints:@@version@@"
  compile 'javax.servlet:servlet-api:2.5'
  compile 'javax.inject:javax.inject:1'
}

appengine {
  downloadSdk = true
}
